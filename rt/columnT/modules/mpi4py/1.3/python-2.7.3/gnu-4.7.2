#%Module1.0
#####################################################################

set modulename  mpi4py
set version	1.3
set compiler	gnu-4.7.2
set basepath	/opt/mpi4py/$version/python-2.7.3/gnu-4.7.2

proc ModulesHelp { } {
    puts stderr "\tLoads $modulename ($version)"
}

module-whatis "Loads $modulename ($version), compiler $compiler."

# Requirements for the module:
prereq python/2.7.3/gnu-4.7.2
prereq openmpi/1.6.4/gnu-4.7.2

prepend-path PYTHONPATH  $basepath/lib/python2.7/site-packages
