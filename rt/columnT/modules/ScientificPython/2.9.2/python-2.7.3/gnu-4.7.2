#%Module1.0
#####################################################################

set modulename  ScientificPython
set version	2.9.2
set compiler	gnu-4.7.2
set basepath	/opt/ScientificPython/$version/python-2.7.3/gnu-4.7.2

proc ModulesHelp { } {
    puts stderr "\tLoads $modulename ($version)"
}

module-whatis "Loads $modulename ($version), compiler $compiler."

# Requirements for the module:
prereq zlib/1.2.7/gnu-4.7.2
prereq hdf5-serial/1.8.10/gnu-4.7.2
prereq netcdf-serial/4.2.1.1/gnu-4.7.2
prereq python/2.7.3/gnu-4.7.2
prereq fftw/3.3.2/gnu-4.7.2
prereq SuiteSparse_config/4.0.2/gnu-4.7.2
prereq AMD/2.3.1/gnu-4.7.2
prereq COLAMD/2.8.0/gnu-4.7.2
prereq CAMD/2.3.1/gnu-4.7.2
prereq CCOLAMD/2.8.0/gnu-4.7.2
prereq CHOLMOD/2.0.1/gnu-4.7.2
prereq UMFPACK/5.6.1/gnu-4.7.2
prereq atlas/3.10.1/gnu-4.7.2
prereq numpy/1.7.0/python-2.7.3/gnu-4.7.2

prepend-path PATH             $basepath/bin
prepend-path PYTHONPATH  $basepath/lib/python2.7/site-packages
