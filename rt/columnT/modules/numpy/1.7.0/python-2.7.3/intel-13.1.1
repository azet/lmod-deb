#%Module1.0
#####################################################################

set modulename  numpy
set version	1.7.0
set compiler	intel-13.1.1
set basepath	/opt/numpy/$version/python-2.7.3/intel-13.1.1

proc ModulesHelp { } {
    puts stderr "\tLoads $modulename ($version)"
}

module-whatis "Loads $modulename ($version), compiler $compiler."

# Requirements for the module:
prereq intel/13.1.1
prereq python/2.7.3/intel-13.1.1
prereq fftw/3.3.2/intel-13.1.1
prereq SuiteSparse_config/4.0.2/intel-13.1.1
prereq AMD/2.3.1/intel-13.1.1
prereq COLAMD/2.8.0/intel-13.1.1
prereq CAMD/2.3.1/intel-13.1.1
prereq CCOLAMD/2.8.0/intel-13.1.1
prereq CHOLMOD/2.0.1/intel-13.1.1
prereq UMFPACK/5.6.1/intel-13.1.1

prepend-path PATH             $basepath/bin
prepend-path PYTHONPATH  $basepath/lib/python2.7/site-packages
