#%Module#####################################################################
# TACC local environment module file     $Date: 2003/09/24 21:27:11 $
#
# This module file appends the relevant paths in /usr/local to the end
# of $PATH and $MANPATH. If you want the local software suite to be searched
# before the Cray-supplied paths, unload the `TACC' module and load the
# `local' module in your .login_user file.
#
# Do not edit this file directly as it is under RCS control.
#
#############################################################################
proc ModulesHelp { } {
puts stderr "The globus-4.0.7-r1 modulefile defines the default paths and environment"
puts stderr "variables needed to use the NMI R8 software and utilities"
puts stderr "available in /share/apps/teragrid/globus-4.0.7-r1, placing them before the vendor-supplied"
puts stderr "paths in PATH and MANPATH.:"
}

module-whatis "Name: Globus"
module-whatis "Version: 4.0.7"
module-whatis "Category: grid"
module-whatis "URL: http://www.globus.org/toolkit"
module-whatis "Description: Globus Software Package"

prepend-path    PATH          /share/apps/teragrid/globus-4.0.7-r1/sbin:/share/apps/teragrid/globus-4.0.7-r1/bin:/share/apps/teragrid/globus-4.0.7-r1/myproxy-3.4/bin
prepend-path    MANPATH         /share/apps/teragrid/globus-4.0.7-r1/man:/share/apps/teragrid/globus-4.0.7-r1/myproxy-3.4/man
prepend-path    LIBPATH         /share/apps/teragrid/globus-4.0.7-r1/lib:/share/apps/teragrid/globus-4.0.7-r1/myproxy-3.4/lib
prepend-path    LD_LIBRARY_PATH       /share/apps/teragrid/globus-4.0.7-r1/lib:/share/apps/teragrid/globus-4.0.7-r1/myproxy-3.4/lib
prepend-path    SHLIB_PATH      /share/apps/teragrid/globus-4.0.7-r1/lib:/share/apps/teragrid/globus-4.0.7-r1/myproxy-3.4/lib

setenv     GLOBUS_LOCATION    /share/apps/teragrid/globus-4.0.7-r1
setenv     GPT_LOCATION    /share/apps/teragrid/globus-4.0.7-r1
setenv     GLOBUS_PATH    /share/apps/teragrid/globus-4.0.7-r1
setenv     SASL_PATH    /share/apps/teragrid/globus-4.0.7-r1/sasl

setenv          RSHCOMMAND         /share/apps/teragrid/globus-4.0.7-r1/bin/ssh
setenv          MYPROXY_SERVER     myproxy.teragrid.org
setenv    GLOBUS_TCP_PORT_RANGE   50000,51000
setenv    GLOBUS_HOSTNAME       ranger.tacc.utexas.edu
